{
  "name": "impulsephp/translation",
  "description": "Modular translation system for the ImpulsePHP framework with multilingual support, domain based files and automatic fallback.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Guillaume Bouyer",
      "email": "impulsephp@icloud.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Impulse\\Translation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Impulse\\Translation\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@composer dump-autoload --optimize"
    ],
    "test": "phpunit"
  },
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10"
  },
  "extra": {
    "impulse-provider": "Impulse\\Translation\\TranslationProvider"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
